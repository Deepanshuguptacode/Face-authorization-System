# Face Authorization System - Environment Configuration

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_PORT=5000
FLASK_HOST=0.0.0.0

# MongoDB Configuration
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=face_auth_db
MONGODB_COLLECTION=users

# Face Recognition Configuration
SIMILARITY_THRESHOLD=0.6
FACE_DETECTION_SIZE=640
IMAGE_QUALITY_DETECTION=0.6
IMAGE_QUALITY_FINAL=0.9

# Camera Configuration
MAX_CAMERA_WIDTH=1280
MAX_CAMERA_HEIGHT=720
IDEAL_CAMERA_WIDTH=640
IDEAL_CAMERA_HEIGHT=480
MAX_FRAME_RATE=30
IDEAL_FRAME_RATE=15

# Performance Configuration
FACE_DETECTION_INTERVAL=2000
MAX_IMAGE_SIZE=800
LARGE_IMAGE_SIZE=1200

# Security Configuration
ALLOWED_ORIGINS=*
ALLOWED_METHODS=GET,POST,OPTIONS
ALLOWED_HEADERS=Content-Type,Authorization
